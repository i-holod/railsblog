<h3>Edit article #<%= @article.id %></h3>

<% if @article && @article.errors.any? %>

  <p>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end  %>
    </ul>
  </p>

<% end %>

<%= form_for :article, url: articles_path + '/' + @article.id.to_s, method: "patch" do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit 'Update article' %>
  </p>

<% end %>