<h3><%= link_to 'Articles', articles_path %> #<%= @article.id %></h3>

<h4><%= @article.title %></h4>
<%= @article.text %>

<br><br>

<h3>Comments:</h3>

<% @article.comments.each do |comment| %>

  <%= comment.body %><br>
  Написал <%= comment.author %>, <%= comment.created_at %><br><br>

<% end %>

<hr>

<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit 'Add comment' %>
  </p>

<% end %>